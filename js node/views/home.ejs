<script>

    $('#searchBtn').click(() => {
        event.preventDefault();
        $(".bar").hide();
        $(".card-winter").hide();
        showProduct({searchText:$('#searchValue').val()});
    })

    $('#filter-btn').click(() => {
        event.preventDefault();
        $(".bar").hide();
        $(".card-winter").hide();
        let filterObj={
            searchGenders: $('#searchGenders').val(),
            searchNormalWearing: $('#searchNormalWearing').val(),
            searchWinterWear:$('#searchWinterWear').val(),
            searchShoes: $('#searchShoes').val()
        }
        showProduct(filterObj);
    });

    $("#nike-bar-content").click((e)=>{
        e.preventDefault();
        $(".card-winter").hide();
        showProduct({searchShoes:"Nike shoes"});
    });
    $("#adidas-bar-content").click((e)=>{
        e.preventDefault();
        $(".card-winter").hide();
        showProduct({searchShoes:"Adidas shoes"});
    });
    $("#puma-bar-content").click((e)=>{
        e.preventDefault();
        $(".card-winter").hide();
        showProduct({searchShoes:"Puma shoes"});
    });
    $("#vans-bar-content").click((e)=>{
        e.preventDefault();
        $(".card-winter").hide();
        showProduct({searchShoes:"Vans shoes"});
    });

    function showProduct(searchObj) {
        $.ajax({
            url: "<%=baseURL%>/api/allProduct",
            type: "POST",
            dataType: "JSON",
            data: searchObj,
            async: false,
            success: function (data) {
                var product_list = "";
                $.each(data, (key, value) => {
                    console.log(value);
                    product_list += '<div class="card m-2 col-12 col-md-2 ind-card " style="border:none;width:19em;">';
                    product_list += '';
                    product_list += '<img  style="border-radius:5px;" src = "<%=baseURL%>/' + value.profileImg + '" class="card-img-top home-img" alt = "..." >';
                    product_list += '<div class="card-body">';
                    product_list += '<a href="<%=baseURL%>/productDetailes?productid=' + value._id + '"><h5 class="card-title">' + value.name.slice(0, 25) + '</h5></a>';
                    product_list += '<p class="card-text">' + value.description.slice(0, 75) + '</p>';
                    product_list += '<div style="display:flex;" >';
                    product_list += '<p class="card-text"><small class=" h5 font-weight-bold"><b>â‚¹' + value.price + '</b></small></p>';
                    product_list += '<a style="margin-left:auto;margin-right:0;" href="#" class="btn btn-primary">Buy now</a>';
                    product_list += '</div>';
                    product_list += '</div>';
                    product_list += '</div>';
                });
                $("#card-parent").html(product_list);

            },
            error: function (err) {
                console.log(err);
            }
        });

    }

    showProduct({});



</script>

