<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    @media only screen and (max-width: 768px) {
        .img-fluid {
            width: 100%;
            height: 300px !important;
            object-fit: cover !important;
        }
    }
</style>

<body>
    <%- include('header') %>
        <!--product details form -->

        <section class="vh-100 productAdmin" style="background-color: rgb(255, 255, 255);">
            <div class="container h-80">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-12 col-xl-11">
                        <div class=" text-black" style="">
                            <div class="card-body p-md-1">
                                <div class="row justify-content-center">
                                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-2">

                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Admin</p>

                                        <form class="mx-1 mx-md-4">

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <input type="text" id="productName" class="form-control"
                                                        placeholder="Product Name" />

                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-rupee-sign fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <input type="number" id="productPrice" class="form-control"
                                                        placeholder="Product Price" />

                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-editfa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <textarea class="form-control" id="productDescription"
                                                        placeholder="Product Description" rows="3"></textarea>
                                                </div>
                                            </div>


                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-folder-open fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <select name="Category" id="productGender" class="form-control">
                                                        <option value="men">Men's fashion</option>
                                                        <option value="women">Women's fashion</option>
                                                        <option value="unisex">Unisex</option>
                                                    </select>

                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-folder-open fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <select name="Category" id="productCategory" class="form-control">
                                                        <option value="" selected="selected">Category</option>

                                                        <option value="Shirt">Shirt</option>
                                                        <option value="T-Shirt">T-Shirt</option>
                                                        <option value="Jeans">Jeans</option>
                                                        <option value="Chinos">Chinos</option>
                                                        <option value="Lycra Pants">Lycra Pants(formal/casual)</option>
                                                        <option value="Tracksuits">Tracksuits(TPU/lycra/NS)</option>
                                                        <option value="Watches">Watches</option>
                                                        <option value="Belts">Belts</option>
                                                        <option value="Other normal wear">Other Normal Wear</option>

                                                        <option value="Jackets">Jackets</option>
                                                        <option value="Sweaters">Sweaters</option>
                                                        <option value="Windcheater">Wincheater</option>
                                                        <option value="Fur jacket">Fur jackets</option>
                                                        <option value="Denims">Denims</option>
                                                        <option value="Lycra sportswear">Lycra sportswear</option>
                                                        <option value="Hoodies">Hoodies</option>
                                                        <option value="Other winter wear">Other Winter Wear</option>

                                                        <option value="Nike shoes">Nike shoes</option>
                                                        <option value="Adidas shoes">Adidas shoes</option>
                                                        <option value="Puma shoes">Puma shoes</option>
                                                        <option value="Jordan shoes">Jordan shoes</option>
                                                        <option value="Balenciaga shoes">Balenciaga shoes</option>
                                                        <option value="Reebok shoes">Reebok shoes</option>
                                                        <option value="Other shoes">Other shoes</option>

                                                    </select>

                                                </div>
                                            </div>
                                            <!-- <label class="form-label">Select Cover Image</label> -->
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-folder-open fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <input type="file" id="profileImg" class="form-control"
                                                        placeholder="upload image"/>

                                                </div>
                                            </div>

                                            <!-- <label class="form-label">Select Multiple Images (Upto 5)</label>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                
                                                <i class="fas fa-folder-open fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <input type="file" id="img2" class="form-control"
                                                        placeholder="upload image"/>

                                                </div>
                                            </div> -->

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-folder-open fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <input type="text" id="productVideo" class="form-control"
                                                        placeholder="Youtube Video Link" />

                                                </div>
                                            </div>


                                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                                <button type="button" id="btn-post"
                                                    class="btn btn-primary btn-lg btn-block"
                                                    style="width:100%;">Post</button>
                                            </div>



                                        </form>

                                    </div>
                                    <div
                                        class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-1">

                                        <img src="<%baseURL%>/assets/pornstar3.jpg" class="img-fluid" alt="Sample image"
                                            style="height: 30em;margin-left: 0em;border-radius: 10px;margin-top: 3em;">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

</body>
<script>
    if(!gCookie){
        location.href = "<%=baseURL%>/login";
    }
    $('#btn-post').click(() => {
        let productName = document.querySelector('#productName').value;
        let productPrice = document.querySelector('#productPrice').value;
        let productDescription = document.querySelector('#productDescription').value;
        let productGender = document.querySelector('#productGender').value;
        let productCategory = document.querySelector('#productCategory').value;
        let productVideo = document.querySelector('#productVideo').value;

        
        if (productName == "" || productPrice == "" || productDescription == "" || productGender == "" || productCategory == "") {
            alert("Please fill all the fields");
            return;
        }

        let formDataInsert = new FormData();

        let img = $("#profileImg")[0].files;
        if (img.length > 0) {
            formDataInsert.append('profileImg', img[0]);
        } else {
            alert("Please select a profile imageds");
            return;
        }

        // let img2 = $("#img2")[0].files;
        // if (img2.length > 0) {
        //     formDataInsert.append('img2', img2[0]);
        // } 
        
        

        console.log(formDataInsert);

        formDataInsert.append('name', productName);
        formDataInsert.append('price', productPrice);
        formDataInsert.append('description', productDescription);
        formDataInsert.append('owner', gCookie);
        formDataInsert.append('gender', productGender);
        formDataInsert.append('category', productCategory);
        formDataInsert.append('video', productVideo);

        $.ajax({
            url: "<%=baseURL%>/api/product",
            type: "POST",
            dataType: "JSON",
            async: false,
            data: formDataInsert,
            contentType: false,
            processData: false,
            success: function (data) {
                console.log(data);
                alert("Product Posted");
                location.href = "<%=baseURL%>/imageUpload?productid=" + data;
            },
            error: function (err) {
                console.log(err);
            }
        });

    })


</script>

</html>